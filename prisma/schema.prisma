generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Asset {
  id          String   @id @default(cuid())
  type        String   // music, sfx, footage, template, lut
  title       String
  description String?
  tags        String   // JSON array stored as string
  bpm         Int?
  durationSec Int?
  key         String?
  resolution  String?
  fps         Int?
  artist      String
  previewUrl  String
  sourceUrl   String
  coverImage  String
  mood        String?
  genre       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  collectionItems CollectionItem[]

  @@index([type])
  @@index([artist])
}

model Collection {
  id          String   @id @default(cuid())
  title       String
  description String?
  coverImage  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  items CollectionItem[]
}

model CollectionItem {
  id           String     @id @default(cuid())
  collectionId String
  assetId      String
  order        Int
  createdAt    DateTime   @default(now())

  collection Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  asset      Asset      @relation(fields: [assetId], references: [id], onDelete: Cascade)

  @@unique([collectionId, assetId])
  @@index([collectionId])
}

model AiJob {
  id          String   @id @default(cuid())
  type        String   // voice, video
  status      String   @default("queued") // queued, processing, succeeded, failed
  input       String   // JSON stored as string
  output      String?  // JSON stored as string
  creditsUsed Int      @default(0)
  error       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([type])
}
